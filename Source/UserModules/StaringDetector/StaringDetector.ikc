<?xml version="1.0"?>

<group name="StaringDetector" description="Detects if someone stares at a kinect">

	<description type="text">
		Detects if someone stares at a kinect
	</description>

	<example description="A simple example">
		<module
			class = "StaringDetector"
			name = "StaringDetector"
		/>
	</example>

	<input name="PEOPLE" description="A matrix of tracked people in the room" />

	<output name="STARING" description="An array of stimuli priority (0 to 1) for the different people (by index)" size="3" />

	<module class="StaringDetector" />

